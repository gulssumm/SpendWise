<Window x:Class="Presentation.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Financial Management System - MVVM Pattern" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <!-- Main Grid Layout -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#FF2196F3" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="💰" FontSize="24" Margin="0,0,10,0"/>
                <TextBlock Text="Financial Management System" 
                          FontSize="20" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
                <Button Content="Refresh Data" 
                       Command="{Binding LoadDataCommand}" 
                       Margin="20,0,0,0" 
                       Background="#FF1976D2"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area - Master-Detail Pattern -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- MASTER VIEW: Transactions List -->
            <GroupBox Grid.Column="0" Header="📋 Transactions (Master View)">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Summary Cards -->
                    <UniformGrid Grid.Row="0" Rows="1" Columns="3" Margin="10">
                        <Border Background="#FF4CAF50" CornerRadius="5" Margin="5" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="💵 Total Balance" 
                                          FontWeight="Bold" Foreground="White" 
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalBalance, StringFormat=C}" 
                                          FontSize="18" FontWeight="Bold" 
                                          Foreground="White" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FFFF5722" CornerRadius="5" Margin="5" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="💸 Total Expenses" 
                                          FontWeight="Bold" Foreground="White" 
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalExpenses, StringFormat=C}" 
                                          FontSize="18" FontWeight="Bold" 
                                          Foreground="White" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FF2196F3" CornerRadius="5" Margin="5" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="💰 Total Income" 
                                          FontWeight="Bold" Foreground="White" 
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalIncome, StringFormat=C}" 
                                          FontSize="18" FontWeight="Bold" 
                                          Foreground="White" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Transactions DataGrid -->
                    <DataGrid Grid.Row="1" 
                             ItemsSource="{Binding Transactions}" 
                             SelectedItem="{Binding SelectedTransaction}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=C}" Width="100"/>
                            <DataGridTextColumn Header="Type" Width="80">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="IsExpense">
                                        <Binding.Converter>
                                            <x:Static Member="local:BooleanToExpenseTypeConverter.Instance"/>
                                        </Binding.Converter>
                                    </Binding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="100"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#FFCCCCCC"/>

            <!-- DETAIL VIEW: Transaction Details & Form -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <!-- DETAIL VIEW: Selected Transaction -->
                <GroupBox Grid.Row="0" Header="🔍 Transaction Details (Detail View)">
                    <StackPanel DataContext="{Binding SelectedTransaction}">
                        <TextBlock Text="Selected Transaction:" FontWeight="Bold" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="ID: " FontWeight="SemiBold" Width="80"/>
                            <TextBlock Text="{Binding Id}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Description: " FontWeight="SemiBold" Width="80"/>
                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Amount: " FontWeight="SemiBold" Width="80"/>
                            <TextBlock Text="{Binding Amount, StringFormat=C}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Type: " FontWeight="SemiBold" Width="80"/>
                            <TextBlock>
                                <TextBlock.Text>
                                    <Binding Path="IsExpense">
                                        <Binding.Converter>
                                            <x:Static Member="local:BooleanToExpenseTypeConverter.Instance"/>
                                        </Binding.Converter>
                                    </Binding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Category: " FontWeight="SemiBold" Width="80"/>
                            <TextBlock Text="{Binding Category}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="Date: " FontWeight="SemiBold" Width="80"/>
                            <TextBlock Text="{Binding Date, StringFormat=yyyy-MM-dd}"/>
                        </StackPanel>

                        <Button Content="🗑️ Delete Selected" 
                               Command="{Binding DataContext.DeleteTransactionCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                               Background="#FFFF5722" 
                               Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Add New Transaction Form -->
                <GroupBox Grid.Row="1" Header="➕ Add New Transaction">
                    <StackPanel>
                        <Label Content="Description:"/>
                        <TextBox Text="{Binding NewDescription, UpdateSourceTrigger=PropertyChanged}"/>

                        <Label Content="Amount:"/>
                        <TextBox Text="{Binding NewAmount, UpdateSourceTrigger=PropertyChanged}"/>

                        <Label Content="Category:"/>
                        <TextBox Text="{Binding NewCategory, UpdateSourceTrigger=PropertyChanged}"/>

                        <Label Content="Type:"/>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <RadioButton Content="💸 Expense" 
                                        IsChecked="{Binding NewIsExpense}" 
                                        Margin="0,0,20,0"/>
                            <RadioButton Content="💰 Income" 
                                        IsChecked="{Binding NewIsExpense, Converter={x:Static local:BooleanInverterConverter.Instance}}"/>
                        </StackPanel>

                        <Label Content="Date:"/>
                        <DatePicker SelectedDate="{Binding NewDate}" Margin="5"/>

                        <Button Content="💾 Add Transaction" 
                               Command="{Binding AddTransactionCommand}" 
                               Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding Transactions.Count, StringFormat='Total Transactions: {0}'}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>